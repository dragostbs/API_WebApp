@model CosmosApp.Models.Planet

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Add a new Planet</h2>
<br />

<div class="border container" style="padding:40px;">
    <form asp-action="Create">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6" style="padding-bottom:20px;">
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-4">
                <label asp-for="Distance"></label>
            </div>
            <div class="col-6">
                <input asp-for="Distance" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>
